@model IEnumerable<POS_CapstoneProject_.Models.InventoryTransactionDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InventoryTransaction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingStock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryTransaction.TransactionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingStock)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InventoryTransactDetailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InventoryTransactDetailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InventoryTransactDetailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
