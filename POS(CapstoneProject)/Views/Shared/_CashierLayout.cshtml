@inject IHttpContextAccessor HttpContextAccessor
@inject POS_CapstoneProject_.Data.POS_CapstoneProject_Context data
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS_CapstoneProject_</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.3/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/General/Table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/General/Modal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/General/Swal_Message.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/General/Button.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Cashier/CashierLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Cashier/Sales.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inika:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Imprima&family=Inika:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="header">
            <div class="left-section">
                <div class="brand-logo">
                    <img src="~/images/logo.jpg" />
                </div>
                <div class="brand-name">
                    <div class="brand-first">DON <span class="brand-second">Macchiatos</span></div>
                </div>
            </div>

            <div class="right-section">
                <div class="checkout-icon">
                    <div class="cart-count">0</div>
                    <img src="~/images/trolley.png" />
                </div>

                @{
                    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserID");
                    var user = data.UserDetail.Where(s => s.UserId == userId).FirstOrDefault();
                    var firstName = user?.Firstname;
                }
                <div class="user" data-toggle="tooltip" data-placement="bottom" title="@firstName">

                    <span class="name-user">@firstName</span>

                    <div class="user-icon">
                        <img src="~/images/person.png" />
                    </div>
                </div>

                <div class="logout-link" onclick="location.href='@Url.Action("Logout", "Authentication")'">
                    <div>
                        <img src="~/images/logout.png" />
                    </div>

                    <div>
                        <span>Logout</span>
                    </div>
                </div>
            </div>

        </div>

    </header>

    <div class="container-all-cashier">
        <div class="main-content-cashier">
            @RenderBody()
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.1.3/js/dataTables.js"></script>
    <script src="~/js/Utility/Popups.js" asp-append-version="true" async></script>
  
    <script src="~/js/Cashier/Sales.js" asp-append-version="true" async></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
