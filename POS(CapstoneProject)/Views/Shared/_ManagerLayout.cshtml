@inject IHttpContextAccessor HttpContextAccessor
@inject POS_CapstoneProject_.Data.POS_CapstoneProject_Context data
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS_CapstoneProject_</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.3/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Admin/ManagerLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/CategoryMenu.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/Admin/ProductMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/SalesMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/UserManagement.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/DashboardMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/Inventory/InventoryList.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/Inventory/RequestList.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/Inventory/StockMovement.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin/SalesReport.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/General/Table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/General/Modal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/General/Swal_Message.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/General/Button.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inika:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Imprima&family=Inika:wght@400;700&display=swap" rel="stylesheet">
   
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
      <div class="header">
          <div class="left-section">
                <div class="brand-logo">
                    <img src="~/images/logo.jpg" />
                </div>
                <div class="brand-name">
                    <div class="brand-first">DON <span class="brand-second">Macchiatos</span></div>
                </div>
          </div>

          <div class="right-section">
                <div class="checkout-icon">                 
                    <div class="cart-count">0</div>                             
                    <img src="~/images/trolley.png" />
                </div>
               
                @{
                    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserID");
                    var user = data.UserDetail.Where(s => s.UserId == userId).FirstOrDefault();
                    var firstName = user?.Firstname;
                }
                <div class="user" data-toggle="tooltip" data-placement="bottom" title="@firstName">
                   
                    <span class="name-user">@firstName</span>

                    <div class="user-icon">
                        <img src="~/images/person.png" />
                    </div>
                </div>
            
                <div class="logout-link" onclick="location.href='@Url.Action("Logout", "Authentication")'">              
                    <div>
                        <img src="~/images/logout.png" />
                    </div>
                       
                    <div>
                        <span>Logout</span>
                    </div>                                
                </div>              
          </div>
           
      </div>

    </header>

    <div class="sidebar">

        <img src="~/Images//BackWhite.png" class="sidebar-toggler" />

        <ul>
            <li>
                <a href="@Url.Action("Index", "DashboardMenu")" class="sidebar-link link-dashboard" data-toggle="tooltip" data-placement="right" title="Dashboard">
                    <img src="~/Images/Dashboard.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Dashboard</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "ProductMenu")" class="sidebar-link link-product" data-toggle="tooltip" data-placement="right" title="Product">
                    <img src="~/Images/Product.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Product</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "CategoryMenu")" class="sidebar-link link-category" data-toggle="tooltip" data-placement="right" title="Category">
                    <img src="~/Images//Category.png" class="sidebar-link-img" >
                    <span class="sidebar-link-name">Category</span>
                   @*  <i class="fa-solid fa-caret-down caret" style="color: #ffffff;"></i> *@
                   
                </a>              
            </li>

            <li>
                <a class="sidebar-link text-white inventoryMenu" data-toggle="tooltip" data-placement="right" title="">
                    <img src="~/Images/Inventory.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Inventory</span>
                               
                </a>

                <ul class="inventorySubmenu">
                    <li>
                        <a href="@Url.Action("InventoryList", "InventoryMenu")" class="link-inventorylist">Inventory List</a>
                    </li>
                    <li>
                        <a href="@Url.Action("StockMovement", "InventoryMenu")" class="link-stockmovement">Stock Movement</a>
                    </li>
                    <li>
                        <a href="@Url.Action("RequestList", "InventoryMenu")" class="link-requestlist">Request List</a>
                    </li>
                </ul>
            </li>

            <li>
                <a href="@Url.Action("Index", "SalesMenu")" class="sidebar-link link-sales" data-toggle="tooltip" data-placement="right" title="Sales">
                    <img src="~/Images/Sales.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Sales</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "SalesReportMenu")" class="sidebar-link link-salesreport" data-toggle="tooltip" data-placement="right" title="Sales Report">
                    <img src="~/Images/SalesReport.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Sales Report</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "UserManagementMenu")" class="sidebar-link link-usermanagement" data-toggle="tooltip" data-placement="right" title="User Management">
                    <img src="~/Images/UserManagement.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">User Management</span>
                </a>
            </li>
        </ul>

    </div>
   @*  <div class="darken-image-all"> *@

    
    <div class="container-all">
        <div class="main-content">
            @RenderBody()
        </div>
       
    </div>
  
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>  
    <script src="https://cdn.datatables.net/2.1.3/js/dataTables.js"></script> 
    <script src="~/js/Utility/Popups.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/ManagerLayout.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/Dashboard.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/SalesMenu.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/SalesReport.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/Inventory/InventoryList.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/Inventory/RequestList.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/Inventory/StockMovement.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/UserManagement.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/CategoryMenu.js" asp-append-version="true" async></script>
    <script src="~/js/Admin/ProductMenu.js" asp-append-version="true" async></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
