<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - POS_CapstoneProject_</title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> 
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.3/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/ManagerLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CategoryMenu.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/ProductMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/POS_CapstoneProject_.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
      

    </header>

    <div class="sidebar openSidebar">

        <img src="~/images/back.png" class="sidebar-toggler" />
        <ul>
            <li>
                <a href="@Url.Action("Index", "DashboardMenu")" class="sidebar-link activeLink">
                   
                    <img src="~/images/Dashboard.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Dashboard</span>

                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "ProductMenu")" class="sidebar-link">
                    <img src="~/images/Product.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Product</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "CategoryMenu")" class="sidebar-link">
                    <img src="~/images/Category.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Category</span>
                   @*  <i class="fa-solid fa-caret-down caret" style="color: #ffffff;"></i> *@
                   
                </a>
                
            </li>

            <li>
                <a class="sidebar-link text-white inventoryMenu">
                    <img src="~/images/Inventory.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Inventory</span>

                    <img src="~/images/back.png" class="sidebarlink-inventory-toggler" />
                 
                </a>
                <ul class="inventorySubmenu">
                    <li><a href="" >Inventory List</a></li>
                    <li><a href="" >Stock Movement</a></li>
                </ul>
            </li>

            <li>
                <a href="@Url.Action("Index", "SalesMenu")" class="sidebar-link">
                    <img src="~/images/Sales.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Sales</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "SalesReportMenu")" class="sidebar-link">
                    <img src="~/images/SalesReport.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">Sales Report</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("Index", "UserManagementMenu")" class="sidebar-link">
                    <img src="~/images/UserManagement.png" class="sidebar-link-img" alt="">
                    <span class="sidebar-link-name">User Management</span>
                </a>
            </li>

        </ul>
    </div>

    @RenderBody()

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/e64350d831.js" crossorigin="anonymous"></script>  
    <script src="https://cdn.datatables.net/2.1.3/js/dataTables.js"></script>   
    <script src="~/js/ManagerLayout.js" asp-append-version="true"></script>
    <script src="~/js/CategoryMenu.js" asp-append-version="true" async></script>
    <script src="~/js/ProductMenu.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
